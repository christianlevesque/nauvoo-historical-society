@using Server.Tools
@using Services.Admin

@inherits ActionPage<ViewUserData, IUserAdminService>

<DocTitle Title="View user"></DocTitle>

@if (_user == null)
{
	<FullWidthLoadingSpinner/>
	return;
}

<Card Title="@_user.UserName"
      Subtitle="@string.Join(", ", _user.Roles)"
      Icon="@(_user.IsVerified ? Icons.Material.Filled.VerifiedUser : "")">
	<CardContent>
		<UpdatableValueContent Name="Email"
		                       Value="@_user.Email"
		                       OnClick="ShowUserEmailModal"/>
		<UpdatableValueContent Name="Password"
		                       Value="********"
		                       OnClick="ShowUserPasswordModal"/>
	</CardContent>
	<CardActions>
		<PrimaryButton Link="@($"{Urls.Dashboard.Users.Index}/{UserId}/roles")">
			Edit roles
		</PrimaryButton>
	</CardActions>
</Card>

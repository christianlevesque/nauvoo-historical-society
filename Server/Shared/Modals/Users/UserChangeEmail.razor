@using Services.Admin

@inherits FormPage<UserChangeEmail, IUserAdminService, UserChangeEmailDto>

<StandardForm Model="Model"
              OnSubmit="OnSubmit"
              Title="@($"Change {Username}'s email")"
              SubmitText="Update email">
	<Information>
		<ErrorMessage Message="@ErrorMessage"/>
		<SuccessMessage Message="@SuccessMessage"/>
	</Information>

	<Fields>
		<MudTextField @bind-Value="Model.Email"
		              For="() => Model.Email"
		              Label="New email address"
		              InputType="InputType.Email"
		              Immediate/>
		<MudTextField @bind-Value="Model.ConfirmEmail"
		              For="() => Model.ConfirmEmail"
		              Label="Confirm new email address"
		              InputType="InputType.Email"
		              Immediate/>
	</Fields>
</StandardForm>
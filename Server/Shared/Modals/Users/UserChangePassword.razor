@using Services.Admin

@inherits FormPage<UserChangePassword, IUserAdminService, UserChangePasswordDto>

<StandardForm Model="Model"
              OnSubmit="OnSubmit"
              Title="@($"Change {Username}'s password")"
              SubmitText="Update password">
	<Information>
		<ErrorMessage Message="@ErrorMessage"/>
		<SuccessMessage Message="@SuccessMessage"/>
	</Information>

	<Fields>
		<MudTextField @bind-Value="Model.NewPassword"
		              For="() => Model.NewPassword"
		              Label="New password"
		              HelperText="The user's password should be between 8 and 64 characters long. It should containa a mix of lowercase and uppercase letters, numbers, and special characters."
		              InputType="InputType.Password"
		              Immediate/>
		<MudTextField @bind-Value="Model.ConfirmNewPassword"
		              For="() => Model.ConfirmNewPassword"
		              Label="Confirm new password"
		              InputType="InputType.Password"
		              Immediate/>
	</Fields>
</StandardForm>